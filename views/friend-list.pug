extends user-layout 

block content
      #page
            h1 Friends
            if friends
                  each friend in friends
                        div(class="flex-center friend-item")
                              p #{friend.display_name} (#{friend.username})
                              form(action='/strife/get-chat', method='POST')
                                    input#user(name="user" value=friend._id hidden)
                                    button(type='submit') Message
      #friends-list
            #online-container(class="flex")
                  #online-count Online
                  img#online-img(src="/images/circle.png")
      script(src="/socket.io/socket.io.js")
      script.
            const user_id="#{user._id}";
            const user_display_name="#{user.display_name}";
            const user_friends="#{user.friends}";
      script(src="/javascripts/socket-connect.js")